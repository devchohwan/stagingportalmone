<div class="space-y-2">
  <% rooms_data.each do |room_data| %>
    <% room = room_data[:room] %>
    <% available = room_data[:available] %>
    
    <div class="room-btn border rounded-lg p-3 <%= available ? 'cursor-pointer hover:bg-blue-50 hover:border-blue-500' : 'bg-red-50 border-red-200 cursor-not-allowed opacity-75' %>"
         <% if available %>
           data-room-id="<%= room.id %>"
           data-room-number="<%= room.number %>"
           onclick="window.selectRoom(this)"
         <% end %>>
      <div class="flex justify-between items-center">
        <span class="font-medium <%= available ? '' : 'text-gray-500' %>"><%= room.number %>석</span>
        <div class="flex gap-2">
          <% unless available %>
            <span class="text-xs bg-red-100 text-red-800 px-2 py-1 rounded font-medium">사용중</span>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>