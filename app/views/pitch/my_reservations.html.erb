    }
  }

  .notes-section {
    background: #f7fafc;
    border-radius: 8px;
    padding: 12px;
    margin-top: 12px;
  }

  .notes-label {
    font-size: 0.8rem;
    color: #718096;
    font-weight: 600;
    margin-bottom: 4px;
  }

  .notes-text {
    color: #4a5568;
