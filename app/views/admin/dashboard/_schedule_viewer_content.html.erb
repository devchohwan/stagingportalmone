  // ì„ ìƒë‹˜ì´ íŠ¹ì • ìš”ì¼ì— íœ´ë¬´ì¸ì§€ í™•ì¸
  window.isTeacherHolidayViewer = function(teacher, dayOfWeek) {
    const holidays = window.teacherHolidaysViewer[teacher] || [];
