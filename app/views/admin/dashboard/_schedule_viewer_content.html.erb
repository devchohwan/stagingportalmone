  // ÎÇ†Ïßú ÏÑ†ÌÉù
  window.selectRescheduleDate = function(dateStr) {
    window.rescheduleData.selectedDate = dateStr;

    const date = new Date(dateStr + 'T00:00:00');
    const dayOfWeek = date.getDay();
    const dayNames = ['Ïùº', 'Ïõî', 'Ìôî', 'Ïàò', 'Î™©', 'Í∏à', 'ÌÜ†'];
    const dayKeys = ['sun', 'mon', 'tue', 'wed', 'thu', 'fri', 'sat'];

    const selectedDay = dayKeys[dayOfWeek];

    document.getElementById('reschedule-selected-date-info').style.display = 'block';
    document.getElementById('reschedule-selected-date-info').querySelector('p').textContent =
      `ÏÑ†ÌÉùÎêú ÎÇ†Ïßú: ${dateStr} (${dayNames[dayOfWeek]})`;

    const scheduleData = window.rescheduleData.scheduleData;
    const teacherHolidays = window.rescheduleData.teacherHolidays[window.rescheduleData.currentTeacher] || [];
    const isHoliday = teacherHolidays.includes(dayOfWeek);

    renderRescheduleScheduleForDay(selectedDay, scheduleData[selectedDay] || {}, isHoliday);
