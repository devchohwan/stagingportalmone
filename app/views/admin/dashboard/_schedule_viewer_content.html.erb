            } else if (student.is_pass) {
              // íŒ¨ìŠ¤ì¸ ê²½ìš° - íšŒìƒ‰ ë°°ê²½
              card.style.background = '#e5e7eb';
              card.style.borderColor = '#9ca3af';
            } else if (student.is_on_leave) {
              // íœ´ì› ìƒíƒœ
