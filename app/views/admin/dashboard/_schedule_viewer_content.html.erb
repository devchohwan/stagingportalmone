    })
      .then(response => response.json())
      .then(data => {
        if (data.success) {
          alert(data.message);
          loadScheduleViewer(); // ÏãúÍ∞ÑÌëú ÏÉàÎ°úÍ≥†Ïπ®
        } else {
          alert(data.message || 'Ï≤òÎ¶¨Ïóê Ïã§Ìå®ÌñàÏäµÎãàÎã§.');
        }
      })
      .catch(error => {
        console.error('Error toggling absence:', error);
        alert('Ïò§Î•òÍ∞Ä Î∞úÏÉùÌñàÏäµÎãàÎã§.');
      });
  };

