  // Í≤∞ÏÑù Ï≤òÎ¶¨/Ï∑®ÏÜå
  window.toggleAbsence = function(scheduleId, studentName, isCurrentlyAbsent, day, isCancelledMakeup, userId, originalDate, cancelledMakeupRequestId) {
    // Î≥¥Í∞ï Ï∑®ÏÜåÎ°ú Ïù∏Ìïú Í≤∞ÏÑùÏù∏ Í≤ΩÏö∞ - Î≥¥Í∞ï Î™®Îã¨ ÎùÑÏö∞Í∏∞
