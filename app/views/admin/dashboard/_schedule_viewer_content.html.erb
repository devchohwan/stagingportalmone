              card.style.cursor = 'pointer';
              // ì •ìƒ í•™ìƒ í´ë¦­ ì‹œ ê²°ì„ ì²˜ë¦¬
              if (student.schedule_id) {
                card.onclick = (e) => {
                  e.stopPropagation();
