<script>
function updateReservationStatus(reservationId, status, service) {
  fetch(`/admin/reservations/${reservationId}/update_status`, {
    method: 'PATCH',
    headers: {
      'X-CSRF-Token': document.querySelector('[name="csrf-token"]').content,
      'Content-Type': 'application/json'
    },
    body: JSON.stringify({ status: status, service: service })
  }).then(response => {
    if (response.ok || response.redirected) {
      window.location.reload();
    } else {
      alert('ÏÉÅÌÉú Î≥ÄÍ≤ΩÏóê Ïã§Ìå®ÌñàÏäµÎãàÎã§.');
    }
  });
}

function deleteReservation(reservationId, service) {
  if (confirm('Ï†ïÎßêÎ°ú Ïù¥ ÏòàÏïΩÏùÑ ÏÇ≠Ï†úÌïòÏãúÍ≤†ÏäµÎãàÍπå?')) {
    // URLÏóê ÏÑúÎπÑÏä§ ÌÉÄÏûÖ Ï∂îÍ∞Ä
    const url = `/admin/reservations/${reservationId}?service=${service}`;
    
    fetch(url, {
      method: 'DELETE',
      headers: {
        'X-CSRF-Token': document.querySelector('[name="csrf-token"]').content,
        'Content-Type': 'application/json'
      },
      body: JSON.stringify({ service: service })
    }).then(response => {
      if (response.redirected) {
        window.location.href = response.url;
      } else if (response.ok) {
        // ÌéòÏù¥ÏßÄ ÏÉàÎ°úÍ≥†Ïπ®
        location.reload();
      } else {
        alert('ÏÇ≠Ï†úÏóê Ïã§Ìå®ÌñàÏäµÎãàÎã§.');
      }
    });
  }
}

function applyReservationFilters() {
  // ÌòÑÏû¨ ÌèºÏùÑ Ï†úÏ∂ú
  document.querySelector('form[action="/admin/reservations"]').submit();
}

function resetReservationFilters() {
  const currentService = new URLSearchParams(window.location.search).get('service') || 'practice';
  window.location.href = `/admin/reservations?service=${currentService}`;
}

</script>