<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-8">선생님 계정 관리</h1>

  <div class="bg-white rounded-lg shadow overflow-hidden">
    <table class="w-full">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">선생님명</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">아이디</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">전화번호</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">SMS 알림</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">관리</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-200">
        <% @teachers.each do |teacher| %>
          <tr>
            <td class="px-6 py-4 whitespace-nowrap">
              <div class="font-medium text-gray-900"><%= teacher.name %></div>
              <div class="text-sm text-gray-500"><%= teacher.teacher_name %></div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
              <%= teacher.username %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <%= form_with model: teacher, url: admin_teacher_path(teacher), method: :patch, class: 'flex gap-2' do |f| %>
                <%= f.text_field :phone, class: 'border rounded px-2 py-1 text-sm', placeholder: '010-1234-5678' %>
                <%= f.submit '저장', class: 'px-3 py-1 bg-blue-500 text-white text-sm rounded hover:bg-blue-600' %>
              <% end %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <%= link_to admin_teacher_toggle_sms_path(teacher), method: :post, class: "inline-flex items-center px-3 py-1 rounded text-sm #{teacher.sms_enabled ? 'bg-green-500 hover:bg-green-600' : 'bg-gray-400 hover:bg-gray-500'} text-white" do %>
                <%= teacher.sms_enabled ? 'ON' : 'OFF' %>
              <% end %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <%= form_with url: admin_teacher_reset_password_path(teacher), method: :post, class: 'flex gap-2' do |f| %>
                <%= text_field_tag :new_password, '', class: 'border rounded px-2 py-1 text-sm', placeholder: '새 비밀번호' %>
                <%= f.submit '비밀번호 변경', class: 'px-3 py-1 bg-yellow-500 text-white text-sm rounded hover:bg-yellow-600' %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="mt-6">
    <%= link_to '← 관리자 대시보드로', admin_dashboard_path, class: 'text-blue-500 hover:underline' %>
  </div>
</div>
