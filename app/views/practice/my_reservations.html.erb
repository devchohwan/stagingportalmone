            <% end %>
          </div>
        <% end %>
      <% else %>
        <div class="empty-state">
          <p class="empty-text">ÏòàÏïΩÏù¥ ÏóÜÏäµÎãàÎã§.</p>
          <%= link_to "ÏòàÏïΩÌïòÍ∏∞", practice_reserve_path, class: "btn-primary" %>
        </div>
      <% end %>
    </div>

    <%= link_to "‚Üê Îí§Î°úÍ∞ÄÍ∏∞", practice_path, class: "back-link" %>
  </div>
</div>

